<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_picture_preview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_picture_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black" />


    <LinearLayout
        android:id="@+id/ll_foot_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/footBarBackground"
        android:gravity="center_vertical|end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_picture_preview_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/selector_back_button_bg"
            android:drawableLeft="@drawable/pick_img"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="选择"
            android:textColor="@drawable/selector_text_color"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>
